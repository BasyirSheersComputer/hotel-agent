# Resort Genius Environment Variables Example
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# API Keys (Required)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-placeholder-key-here
GOOGLE_MAPS_API_KEY=AIza-placeholder-key-here

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
# Environment: development, production
ENVIRONMENT=development
# Port to run the backend on
PORT=8000
# Enable/disable demo mode (bypasses auth, uses in-memory storage)
DEMO_MODE=false
# Enable/disable analytics dashboard
ENABLE_DASHBOARD=true
# Enable/disable metrics logging
ENABLE_METRICS=true

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
# Connection string: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://resort_genius:dev_password_123@localhost:5432/resort_genius

# -----------------------------------------------------------------------------
# Caching & Session (Redis)
# -----------------------------------------------------------------------------
# Connection string: redis://:password@host:port/db
REDIS_URL=redis://:dev_redis_123@localhost:6379/0

# -----------------------------------------------------------------------------
# Security (JWT)
# -----------------------------------------------------------------------------
# Secret key for JWT token generation (generate a secure random string)
JWT_SECRET_KEY=change_this_to_a_secure_random_string_for_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
# Allow all origins (true/false)
CORS_ALLOW_ALL=true
# Comma-separated list of allowed origins (if CORS_ALLOW_ALL=false)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# Docker Compose Variables
# -----------------------------------------------------------------------------
POSTGRES_USER=resort_genius
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=resort_genius
POSTGRES_PORT=5432

REDIS_PASSWORD=dev_redis_123
REDIS_PORT=6379

PGADMIN_EMAIL=admin@resortgenius.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# -----------------------------------------------------------------------------
# Frontend
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
